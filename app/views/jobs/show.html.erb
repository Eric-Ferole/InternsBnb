<div class="container">
<h1><%= @job.name %></h1>
  <div class="row justify-content-md-center show_card">
    <div class="col-md-12 col-lg-6">
      <% if @job.user.logo.attached? %>
        <td class=""><%= cl_image_tag @job.user.logo.key, height: 120, crop: :fill %></td>
      <% end %>
    <h3><strong><%= @job.user.company_name %></strong></h3>
    <b>Address: <%= @job.user.street_address %></b>
  </div>
  </div>
<ul>
<li><b>Category:</b> <%= @job.category %></li>
<li><b>Internship duration </b> : <%= @job.duration %></li>
<li><b>Publication date </b>: <%= @job.created_at.strftime("%b %d, %Y") %></li>
<li><b>Address: </b><%=@job.user.street_address%> </li>
<li><b>Publication date </b>: <%= @job.created_at %></li>
</ul>
<div>
  <p><%= link_to "Visit Website", @job.user.website %></p>
</div>
</div>
</div>



<% if policy(@job).edit? %>
<button type='button' onclick="location.href='<%= edit_job_path %>';">edit job</button>
<% end %>
<button type='button' onclick="location.href='<%= jobs_path %>';">Back to list</button>
