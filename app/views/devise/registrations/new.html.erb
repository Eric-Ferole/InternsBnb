<h1>Expand your team with the best recruits</h1>
<p>Enjoy all the premium benefits and advanced features of hireinterns.net when you signup for FREE.</p>
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-user-infos">
    <%= f.input :first_name,
                required: true,
                input_html: { autocomplete: "first_name" }%>
    <%= f.input :last_name,
                required: true,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
 <!--   <%= f.input :password_confirmation,
                required: true %> -->
    </div>
    <div class="form_company_infos">
    <%= f.input :company_name,
                required: true %>
    <%= cl_image_tag @user.logo, width: 120 %>
    <%= f.input :logo, as: :file,
                require: true %>
    <%= f.input :street_address,
                required: true %>
    <%= f.input :city,
                required: true %>
    <%= f.input :province,
                required: true %>
    <%= f.input :postal_code,
                required: true %>
    <%= f.select :country, ["Canada", "Usa"] %>

    <%= f.label :website, "Website or careers page" %>
    <%= f.input :website %>
    <%= f.label :business_size, "What is the size of your business ?" %>
    <%= f.select :business_size, ["5-10 Employees", "10-25 Employees","25-50 Employees","50-100 Employees", "100-250 Employees", "More than 250 Employees"]%>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
