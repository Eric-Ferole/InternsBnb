<%= render 'shared/search_bar' %>



<!-- This is were the business details card starts -->
<div class="card_wraper">
  <div class="business_card_login">
    <div class="logo">
      <%= cl_image_tag @user.logo.key, height: 95, crop: :fill %>
    </div>
    <div class="card_infos">

      <p class="business_name"><%= @user.company_name %></p>
      <p class="infos">Number of employee</p>
      <p class="infos_label">More than 250 employees</p>
      <p class="infos">Address</p>
      <p class="infos_label "><%= @user.street_address %></p>
      <a href=""><%= link_to "Visit Website", @user.website %></a>

    </div>
  </div>
  <div class="map_container">
    <div class="card_map">
       <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  </div>
</div>








